%html(lang="ja")
	%head
		%meta(charset="UTF-8")
		%meta(name="viewport" content="initial-scale=1.0, user-scalable=no")
		%script(src="http://maps.googleapis.com/maps/api/js?sensor=false&v=3")
		:scss
			html, body {
				width: 100%;
				height: 100%;
				margin: 0;
			}
	%body
		%div#map_canvas(style="width:100%;height:100%;")
		:javascript
			function initialize(){
				//地図を表示
				var latlng = new google.maps.LatLng(35.681382, 139.766084);
				var mapOpts = {
					zoom: 15,
					center: latlng,
					mapTypeId: google.maps.MapTypeId.ROADMAP
				};
				var mapDiv = document.getElementById('map_canvas');
				var mapCanvas = new google.maps.Map(mapDiv, mapOpts);
			}
			window.onload = initialize();
