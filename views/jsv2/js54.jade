                                td 単項式
                                td='!false: //==> true'
                            tr
                                td='&&'
                                td='&&演算子'
                                td 論理積式
                                td='true && true; //=> true'
                            tr
                                td='||'
                                td='||演算子'
                                td 論理和式
                                td='true || false; //=> true'
                            tr
                                td='? : '
                                td 不等価演算子（三項演算子）
                                td 条件式
                                    td='true ? 1: 2; //=> 1'
