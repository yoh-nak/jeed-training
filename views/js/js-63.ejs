<pre class="prettyprint linenums">
&lt;!DOCTYPE html&gt;
&lt;html lang='ja'&gt;
  &lt;head&gt;
    &lt;meta charset='UTF-8'&gt;
    &lt;meta content='width=device-width, user-scalable=no' name='viewport'&gt;
    &lt;link href='http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css' rel='stylesheet'&gt;
    &lt;script src='http://code.jquery.com/jquery-1.9.1.min.js'&gt;&lt;/script&gt;
    &lt;script src='http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js'&gt;&lt;/script&gt;
    &lt;title&gt;
      繰り返し構文
    &lt;/title&gt;
    &lt;script&gt;
      $(document).on('<mark>pagebeforecreate</mark>','#index',function(){
        for(var i = 0; i &lt; 10; i++){
          var html = '&lt;li&gt;&lt;a&gt;ボタン &lt;span class="ui-li-count"&gt;' + i + '&lt;/span&gt;&lt;/a&gt;&lt;/li&gt;'
          $('[data-role="listview"]').append(html);
        }
      });
    &lt;/script&gt;
    &lt;style&gt;
      /**/
    &lt;/style&gt;
  &lt;/head&gt;
  &lt;body&gt;
    &lt;div data-role='page' id='index'&gt;
      &lt;div data-role='header'&gt;
        &lt;h1&gt;
          繰り返し構文
        &lt;/h1&gt;
      &lt;/div&gt;
      &lt;div data-role='content'&gt;
        &lt;ul data-inset='true' data-role='listview'&gt;&lt;/ul&gt;
      &lt;/div&gt;
      &lt;div data-position='fixed' data-role='footer'&gt;
        &lt;h4&gt;
          Copyright &copy; ナカノヨウスケ
        &lt;/h4&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  &lt;/body&gt;
&lt;/html&gt;
</pre>
