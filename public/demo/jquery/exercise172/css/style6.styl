#floatWindow
    display none
    width 500px
    height 400px
    position absolute
    top 100px
    left 100px
    a.close
        position absolute
        right 20px
        top 1px
        img
            border none
    dl
        width 100%
        height 100%
        background url("../img/floatWindow.png")
        margin 0
        dt
            height 25px
            line-height 25px
            text-indent 1em
            color #FFFFFF
            font-weight bold
            cursor move
        dd
            margin 0
            padding 2em
            line-height 1.5
            text-indent 1em
