doctype html
html(lang='ja')
    head
        meta(charset='utf-8')
        meta(name='viewport',content='width=device-width, initial-scale=1.0')
        title
    body
        canvas#myCanvas(width='500',height='500')
        script(src='http://code.jquery.com/jquery-1.11.0.min.js')
        script
            :js
                (function(){
                    $(function(){
                        var canvas = $('#myCanvas');
                        var context = canvas.get(0).getContext('2d');

                        context.translate(200, 200); //正方形の中心に平行移動
                        context.rotate(0.7854); //45度（Math.PI/4）回転
                        context.fillRect(-50, -50, 100, 100); //回転の中心を中心とする正方形を描画
                    });
                })()