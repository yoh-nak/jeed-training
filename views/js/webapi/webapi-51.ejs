      &lt;div data-role="content"&gt;
        &lt;fieldset data-role="fieldcontain"&gt;
          &lt;input id="address" type="search" placeholder="住所を入力"&gt;
        &lt;/fieldset&gt;
        &lt;div id="map"&gt;&lt;/div&gt;
