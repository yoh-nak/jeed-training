html(lang='ja')
	head
		meta(charset='utf-8')
		meta(name='viewport',content='width=device-width, initial-scale=1.0')
		title
	body
		canvas#myCanvas(width='500',height='500')
		script(src='http://code.jquery.com/jquery-1.10.2.min.js')
		script.
			$(function(){
				var canvas = $('#myCanvas');
				var context = canvas.get(0).getContext('2d');

				var image = new Image();
				image.src = 'example.jpg';
				$(image).load(function(){
					context.drawImage(image, 0, 0, 500, 333);

					//context.getImageData(x, y, width, height);
					var imageData = context.getImageData(0, 0, 3, 3);
					var pixel = imageData.data;
					
					console.log(pixel);

					var red = pixel[0]; console.log(red);
					var green = pixel[1]; console.log(green);
					var blue = pixel[2]; console.log(blue);
					var alpha = pixel[3]; console.log(alpha);
				})
			});