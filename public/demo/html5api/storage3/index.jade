doctype html
html(lang='ja')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1.0,user-scalable=no')
    title
    link(rel='stylesheet', href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css')
    script(src='http://code.jquery.com/jquery-1.9.1.min.js')
    script(src='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
    script
        :js
            (function(){
                // 複数のデータをローカルストレージに保存する
                $(document).on('pageshow','#index',function(){
                    $('#saveButton').on('vclick',function(){
                        var name = $('#userName').val();
                        var txt = $('#userComment').val();
                        var saveData = {
                            user : name,
                            comment : txt
                        };
                        window.localStorage.setItem('textData2', JSON.stringify(saveData));
                    });
                });
            })()
    body
        #index(data-role='page')
            div(data-role='header')
                h1 複数のデータをローカルストレージに保存
            div(data-role='content')
                form
                    input#userName(type='text', name='userName', value='桜井')
                    br
                    textarea#userComment(cols='20', rows='5') 意見をお願いします
                    br
                    input#saveButton(type='button', value='保存')
            div(data-role='footer', data-position='fixed')
                h1 フッター