extends ../../layout

block link
	include ../../link2

block content
	include ../navbar
	.container
		.row
			.col-sm-3
				include ../left
			.col-sm-9
				.panel.panel-primary
					.panel-heading
						i.glyphicon.glyphicon-book
						| &nbsp;起動／終了
					.panel-body
						.alert.alert-info Redisサーバの起動
						pre
							:code
								redis-server
						pre
							:code
								redis-server /usr/local/etc/redis.conf
						hr
						.alert.alert-info Redisサーバーの終了
						p: mark クライアントからshutdownで終了しないとディスクに保存されません。
						pre
							:code
								Crtl+ C
						hr
						.alert.alert-info Redisクライアントの起動
						pre
							:code
								redis-cli
						hr
						.alert.alert-info クライアントからサーバーのデータをディスクに保存してサーバーを終了
						pre
							:code
								shutdown
						hr
						.alert.alert-info Redisクライアントの終了
						pre
							:code
								exit