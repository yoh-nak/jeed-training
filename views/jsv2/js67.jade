                                            title カラーテーブル
                                            script
                                                :js
                                                    var color = ['0', '3', '6', '9', 'C', 'F'];
                                                    $(document).on('pagebeforecreate','#index',function(){
                                                        var table = undefined;
                                                        for(var i = 0; i < color.length; i++){
                                                            for(var j = 0; j < color.length; j++ ){
                                                                table += '<tr>';
                                                                for(var k = 0; k < color.length; k++ ){
                                                                    var bgc = color[i] + color[j] + color[k];
                                                                    table += '<td style="background-color:#' + bgc + '">';
                                                                    table += '#' + bgc
                                                                    table += '</td>';
                                                                }
                                                                table += '</tr>';
                                                            }
                                                        }
                                                        $('table').html(table);
                                                    });
                                            style
                                                :stylus
                                                    td
                                                        width 20px
                                                        height 20px
                                        body
                                            #index(data-role='page')
                                                div(data-role='header')
                                                    h1　カラーテーブル
                                                div(data-role='content')
                                                    table
                                                div(data-position='fixed', data-role='footer')
                                                    h1 フッター