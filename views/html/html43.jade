								|      &lt;menuitem label="水平方向に反転" onclick="fliph()" icon="img/fliph.png"&gt;&lt;/menuitem&gt;
								|      &lt;menuitem label="垂直方向に反転" onclick="flipv()" icon="img/flipv.png"&gt;&lt;/menuitem&gt;
								| &lt;/menu&gt;
