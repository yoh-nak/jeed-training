extends ../../layout

block link
    link(href='../../css/bootstrap.min.css',rel='stylesheet',media='screen')
    link(href='../../css/bootstrap-theme.min.css',rel='stylesheet',media='screen')
    link(href='../../js/dtree/dtree.css', rel='stylesheet', media='screen')
    link(href='../../css/style.css',rel='stylesheet',media='screen')
    link(href='../../js/google-code-prettify/prettify.css',rel='stylesheet',media='screen')

block content
    include navbar
    .container
        .row
            .col-sm-3
                include left
            .col-sm-9
                .panel.panel-primary
                    .panel-heading テキストエリアの内容をローカルストレージに保存
                    .panel-body
                        p
                            a.btn.btn-default(href='../demo/html5api/storage2/index.html', target='_blank')
                                i.glyphicon.glyphicon-play
                                |  デモ
                        pre(class='prettyprint linenums:1')
                            :code
                                doctype html
                                html(lang='ja')
                                    meta(charset='utf-8')
                                    meta(name='viewport', content='width=device-width,initial-scale=1.0,user-scalable=no')
                                    title
                                    link(rel='stylesheet', href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css')
                                    script(src='http://code.jquery.com/jquery-1.9.1.min.js')
                                    script(src='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
                                    script
                                        :js
                                            (function(){
                                                // テキストエリアの内容をローカルストレージに保存する
                                                $(document).on('pageshow','#index',function(){
                                                    $('#saveButton').on('vclick',function(){
                                                    var txt = $('#userComment').val();
                                                    window.localStorage.setItem('textData', txt);
                                                    });
                                                });
                                            })()
                                    body
                                        #index(data-role='page')
                                            div(data-role='header')
                                                h1 テキストエリアの内容をローカルストレージに保存
                                            div(data-role='content')
                                                form
                                                    textarea#userComment(cols='20', rows='5') 感想をお願いします
                                                    br
                                                    input#saveButton(type='button', value='保存')
                                            div(data-role='footer', data-position='fixed')
                                                h1 フッター
