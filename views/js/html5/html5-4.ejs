<pre class="prettyprint linenums">
&lt;!DOCTYPE html&gt;
&lt;html lang="ja"&gt;
&lt;head&gt;
&lt;meta charset="utf-8"&gt;
&lt;title&gt;&lt;/title&gt;
&lt;link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css"&gt;
&lt;script src="http://code.jquery.com/jquery-1.9.1.min.js"&gt;&lt;/script&gt;
&lt;script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"&gt;&lt;/script&gt;
&lt;script&gt;
//オーディオを繰り返し再生する
$(document).on('pageshow','#index',function(){
  var audioObj = document.getElementById("myAudio");
  var loopFlag = false;
  audioObj.addEventListener("ended", function(){
    if(loopFlag == true){
      audioObj.play();
    }
  }, true);
  $('#aPlay').on('vclick',function(){
    audioObj.play();
  });
  $('#aLoopON').on('vclick',function(){
    loopFlag = true;
    $('stat').html('ループON');
  });
  $('#aLoopOFF').on('vclick',function(){
    loopFlag = false;
    $('stat').html('ループOFF');
  });
});
&lt;/script&gt;
&lt;/head&gt;
&lt;body&gt;
&lt;div id="index" data-role="page"&gt;
  &lt;div data-role="header"&gt;
    &lt;h1&gt;オーディオを繰り返し再生&lt;/h1&gt;
  &lt;/div&gt;
  &lt;div data-role="content"&gt;
  &lt;audio id="myAudio" width="192" height="48" controls&gt;
    &lt;source src="../audio-1/sample.mp3"&gt;
    &lt;source src="../audio-1/sample.ogg"&gt;
    &lt;p&gt;お使いのブラウザではオーディオを再生できません。&lt;/p&gt;
  &lt;/audio&gt;
  &lt;form&gt;
    &lt;input type="button" id="aPlay" value="再生"&gt;
    &lt;input type="button" id="aLoopON" value="繰り返しON"&gt;
    &lt;input type="button" id="aLoopOFF" value="繰り返しOFF"&gt;
  &lt;/form&gt;
  &lt;div id="stat"&gt;&lt;/div&gt;
  &lt;/div&gt;
  &lt;div data-role="footer" data-position="fixed"&gt;
    &lt;h4&gt;Copyright &copy; ナカノヨウスケ&lt;/h4&gt;
  &lt;/div&gt;
&lt;/div&gt;
&lt;/body&gt;
