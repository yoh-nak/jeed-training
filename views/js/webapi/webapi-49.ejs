&lt;!DOCTYPE html&gt;
&lt;html lang="ja"&gt;
  &lt;head&gt;
    &lt;meta charset="utf-8"&gt;
    &lt;title&gt;&lt;/title&gt;
    &lt;script src="http://code.jquery.com/jquery-1.10.2.min.js"&gt;&lt;/script&gt;
    &lt;script src="http://maps.google.com/maps/api/js?sensor=true&language=ja"&gt;&lt;/script&gt;
    &lt;script&gt;
      $(function(){
       //ジオコーディングAPI（住所から緯度経度を算出）
       var geocoder = new google.maps.Geocoder();
       //住所をから緯度経度を算出し結果をコールバック関数で取得
       geocoder.geocode({
        'address': '大阪府大阪市淀川区西中島五丁目'
       }, function(result, status) {
        //取得成功
        if (status == google.maps.GeocoderStatus.OK) {
         //地図を表示する処理
         var latlng = <mark>result[0].geometry.location</mark>;
         var options = {
         zoom: 15,
         center: latlng,
         mapTypeId: google.maps.MapTypeId.ROADMAP
         };
         var map = new google.maps.Map(document.getElementById('map'), options);
        //取得失敗
        } else {
         alert('エラーです！');
        }
       });
      });
    &lt;/script&gt;
    &lt;style&gt;
      html,body{
       width:100%;
       height:100%;
       margin:0;
      }
      #map{
       width:100%;
       height:100%;
      }
    &lt;/style&gt;
  &lt;/head&gt;
  &lt;body&gt;
    &lt;div id="map"&gt;&lt;/div&gt;
