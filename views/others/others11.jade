								h4 Gruntfile.jsをにタスクを記述する
								pre(class='prettyprint lang-js linenums:1')
									| module.exports = function(grunt){
									|   grunt.initConfig({
									|     concat: {
									|       dist: {
									|         src: [
									|           'src/intro.js',
									|           'src/project.js',
									|           'src/outro.js'
									|         ],
									|         dest: 'dist/built.js'
									|       }
									|     }
									|   });
									|   grunt.loadNpmTasks('grunt-contrib-concat');
									| }
