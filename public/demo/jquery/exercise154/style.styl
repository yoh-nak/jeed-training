prefix(prop, val)
    -webkit-{prop} val
    {prop} val

html,body
	width 100%
	height 100%

body
	margin 0

.container
	position relative
	min-height 100%

nav.panel
	cursor pointer
	position absolute
	top 0
	left 0px
	z-index 1
	width 300px
	min-height 100%
	background-color navy
	color white
	prefix('transition-property', all)    
	prefix('transition-duration', 500ms)
	prefix('transition-timing-function', ease-in-out)
	h1
		margin-top 0
		margin-bottom 0
	ul
		margin-top 0
		margin-bottom 0
.content
	position absolute
	top 0
	left 50px
	z-index 2
	min-height 100%
	background-color white
	prefix('transition-property', all)    
	prefix('transition-duration', 500ms)
	prefix('transition-timing-function', ease-in-out)
	&.open
		left 250px
	h1
		margin-top 0
		marign-bottom 0
