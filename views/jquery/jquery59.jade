extends ../layout

block link
    include ../link1

block content
    include navbar
    .container
        .row
            .col-sm-3
                include left
            .col-sm-9
                .panel.panel-primary
                    .panel-heading
                        i.glyphicon.glyphicon-book
                        | &nbsp;要素の移動課題
                    .panel-body
                        p ボタンをクリックして、li要素を移動してみましょう。
                        p
                            a.btn.btn-default(href='../demo/jquery/exercise57/index1.html',target='_blank')
                                i.glyphicon.glyphicon-play
                                | デモ
                            button.btn.btn-danger(type='button',data-toggle='collapse',data-target='#demo')
                                i.glyphicon.glyphicon-question-sign
                                | &nbsp;解答例
                        #demo.collapse.out
                                pre(class='prettyprint linenums:1')
                                    :code
                                        doctype
                                        html(lang='ja-JP')
                                            head
                                                meta(charset='UTF-8')
                                                title
                                                link(rel='stylesheet',href='style.css')
                                            body
                                                ul
                                                    li メニュー1メニュー1メニュー1
                                                    li メニュー2メニュー2メニュー2
                                                    li メニュー3メニュー3メニュー3
                                                    li メニュー4メニュー4メニュー4
                                                p
                                                    input(type='button',value='▲')
                                                    input(type='button',value='▼')
                                                script(src='http://code.jquery.com/jquery-1.11.0.min.js')
                                                script(src='script.js')
                                pre(class='prettyprint linenums:1')
                                    :code
                                        $(function() {
                                            $('input:first-of-type').click(function() {
                                                $('li:first-of-type').appendTo('ul');
                                            });
                                            $('input:last-of-type').click(function() {
                                                $('li:last-of-type').prependTo('ul');
                                            });
                                        });
                                pre(class='prettyprint linenums:1')
