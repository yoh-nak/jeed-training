extends ../layout

block link
    include ../link1

block content
    include navbar
    .container
        .row
            .col-sm-3
                include left
            .col-sm-9
                .panel.panel-primary
                    .panel-heading
                        i.glyphicon.glyphicon-book
                        |  配列とオブジェクト
                    .panel-body
                        h4 空の配列の初期化
                        pre.
                            var 変数 = []; //= 配列リテラル
                            var 変数 = new Array(); //= 配列オブジェクト
                            var 変数 = new Array(要素の数); //= 配列オブジェクト
                        pre.
                            var ary = [];
                            var ary = new Array();
                            var ary = new Array(3);
                        h4 配列に初期値をセットして初期化
                        pre.
                            var 変数 = [値1, 値2, 値3, ….]; //= 配列リテラル
                            var 変数 = new Array(値1, 値2, 値3, ...); //= 配列オブジェクト
                        h4 配列の取得
                        pre.
                            変数 = 配列[添え字];

                        h4 配列に代入
                        pre.
                            配列[添え字] = 値;

                        pre(class='prettyprint linenums:1')
                            :code
                                var ary = ['Hello', 'Welcome', 'Bye'];
                                var msg = ary[0] + '-' + arry[1];
                                ary[10] = msg;
                                alert(ary);

                        pre(class='prettyprint linenums:1')
                            :code
                                var a = new Array(3);
                                a[0] = 10;
                                a[1] = 20;
                                a[2] = 30;
                                for(var i = 0; i < 3; i++){
                                     document.writeln(a[i]);
                                }
                        pre(class='prettyprint linenums:1')
                            :code
                                var a = [10, 20, 30];
                                for(var i = 0; i < 3; i++){
                                     document.writeln(a[i]);
                                }
                        hr
                        h4 配列の要素数の取得
                        pre.
                            変数.length
                        pre(class='prettyprint linenums:1')
                            :code
                                var ary = [98, 82, 70, 86, 53];
                                var total = 0;
                                for(var i = 0; i < ary.length; i++){
                                  total += ary[i];
                                }
                                alert('合計: ' + total);
                        hr
                        h4 二次元配列
                        p 配列として宣言されたデータに、さらに配列を格納すると、二次元配列になります。
                        pre(class='prettyprint linenums:1')
                            :code
                                var ary = [];
                                ary[0] = ['a', 'b', 'c'];
                                ary[1] = [true, true, false];
                                ary[2] = ['10', 'a', {'a': true}];

                        p 以下のように配列にあらかじめ値が格納されていた場合、ary[0]には10が格納されていますが、その値「10」を上書きするように、配列「['a', 'b', 'c']」が格納されるので注意しましょう。
                        pre(class='prettyprint linenums:1')
                            :code
                                var ary = [10, 20, 30];
                                ary[0] = ['a', 'b', 'c'];
                                ary[1] = [true, true, false];
                                ary[2] = ['10', 'a', {'a': true}];

                        p 配列に、Arrayオブジェクトのコンストラクタを格納しても同様に、二次元配列になります。
                        pre(class='prettyprint linenums:1')
                            :code
                                var ary = new Array();
                                ary[0] = new Array('b','b','c');
                                ary[1] = new Array(true, true, false);
                                ary[2] = new Array('10', 'a', {'a': true});

                        p Arrayオブジェクトのpushメソッドで配列に格納することもできます。
                        pre(class='prettyprint linenums:1')
                            :code
                                var ary = [];
                                ary.push(['a', 'b', 'c']);
                                ary.push([true, true, false]);
                                ary.push(['10', 'a', {'a': true}]);

                        p 二次元配列の初期値がわかっている場合は、以下のように記述すると可読性が高まります。
                        pre(class='prettyprint linenums:1')
                            :code
                                var ary = [
                                  ['a', 'b', 'c'],
                                  [true, true, false],
                                  ['10', 'a', {'a': true}] 
                                ];