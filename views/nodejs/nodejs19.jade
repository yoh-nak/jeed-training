                        pre(class='prettyprint linenums:1')
                            :code
                                extends layout

                                block content
                                    h1= title
                                    p Welcome to #{title}
                                    p#msg #{msg}
                                    table(border='1')
                                        tr
                                            th id
                                            th name
                                            th mail
                                            th tel
