&lt;!DOCTYPE html&gt;
&lt;html lang="ja"&gt;
&lt;head&gt;
&lt;meta charset="utf-8"&gt;
&lt;title&gt;&lt;/title&gt;
&lt;link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css"&gt;
&lt;script src="http://code.jquery.com/jquery-1.9.1.min.js"&gt;&lt;/script&gt;
&lt;script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"&gt;&lt;/script&gt;
&lt;script&gt;
//コントロールバーを表示／非表示にする
$(document).on('pageshow','#index',function(){
  var videoObj = document.getElementById("myVideo");
  $('#ctrlON').on('vclick',function(){
    videoObj.controls = true;
    $('#stat').html('コントロール表示ON');
  });
  $('#ctrlOFF').on('vclick',function(){
    videoObj.controls = false;
    $('#stat').html('コントロール表示OFF');
  });
});
&lt;/script&gt;
&lt;/head&gt;
&lt;body&gt;
&lt;div id="index" data-role="page"&gt;
  &lt;div data-role="header"&gt;
  &lt;h1&gt;コントロールバーを表示／非表示する&lt;/h1&gt;
  &lt;/div&gt;
  &lt;div data-role="content"&gt;
    &lt;video id="myVideo" width="192" height="108" controls&gt;
      &lt;source src="../video-1/sample.ogv"&gt;
      &lt;source src="../video-1/sample.mov"&gt;
      &lt;source src="../video-1/sample.webm"&gt;
      &lt;p&gt;お使いのブラウザでは映像を再生できません。&lt;/p&gt;
    &lt;/video&gt;
    &lt;form&gt;
      &lt;input type="button" id="ctrlON" value="コントロールバーを表示する"&gt;
      &lt;input type="button" id="ctrlOFF" value="コントロールバーを表示しない"&gt;
    &lt;/form&gt;
    &lt;div id="stat"&gt;&lt;/div&gt;
  &lt;/div&gt;
  &lt;div data-role="footer" data-position="fixed"&gt;
  &lt;h4&gt;Copyright &copy; ナカノヨウスケ&lt;/h4&gt;
  &lt;/div&gt;
&lt;/div&gt;
