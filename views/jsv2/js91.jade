extends ../layout

block link
    include ../link1

block content
    include navbar
    .container
        .row
            .col-sm-3
                include left
            .col-sm-9
                .panel.panel-primary
                    .panel-heading
                        i.glyphicon.glyphicon-book
                        |  テンプレートでカラーテーブル
                    .panel-body
                        p /views/index.jade
                        pre(class='prettyprint linenums:1')
                            :code
                                doctype
                                html(lang='ja')
                                    head
                                        meta(charset='UTF-8')
                                        meta(content='width=device-width, user-scalable=no', name='viewport')
                                        link(href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css', rel='stylesheet')
                                        script(src='http://code.jquery.com/jquery-1.9.1.min.js')
                                        script(src='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
                                        title カラーテーブル
                                        style
                                            :stylus
                                                table
                                                    border-collapse collapse
                                                td
                                                    border 1px solid black
                                                    width 35px
                                                    height 35px
                                                    text-align center
                                                    vertical-align center
                                    body
                                        #index(data-role='page')
                                            div(data-role='header')
                                                h1　カラーテーブル
                                            div(data-role='content')
                                                table
                                                    <mark>-var color = ['0', '3', '6', '9', 'C', 'F'];</mark>
                                                    -for(var i = 0; i < <mark>color.length</mark>; i++)
                                                        -for(var j = 0; j < <mark>color.length</mark>; j++ )
                                                            tr
                                                                -for(var k = 0; k < <mark>color.length</mark>; k++ )
                                                                    td(style='background-color:#<mark>#{color[i]+color[j]+color[k]}</mark>')
                                                                        = <mark>color[i]+color[j]+color[k]</mark>
                                            div(data-position='fixed', data-role='footer')
                                                h1 フッター