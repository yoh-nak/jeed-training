&lt;!DOCTYPE html&gt;
&lt;html lang="ja"&gt;
&lt;head&gt;
&lt;meta charset="utf-8"&gt;
&lt;title&gt;&lt;/title&gt;
&lt;link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css"&gt;
&lt;script src="http://code.jquery.com/jquery-1.9.1.min.js"&gt;&lt;/script&gt;
&lt;script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"&gt;&lt;/script&gt;
&lt;script&gt;
// 選択されたファイル数と種類などを調べる
$(document).on('pageshow','#index',function(){
  $('#checkButton').on('vclick',function(){
    var fileList = document.getElementById('selectFiles').files;
    var txt = '';
    for(var i=0; i&lt;fileList.length; i++){
      txt += '&lt;li&gt;ファイル名：'+fileList[i].name+'&lt;/li&gt;';
      txt += '&lt;li&gt;ファイルサイズ：'+fileList[i].size+'バイト&lt;/li&gt;';
      txt += '&lt;li&gt;ファイルの種類：'+fileList[i].type+'&lt;/li&gt;';
    }
    $('#result').html(txt).listview('refresh');
  });
});
&lt;/script&gt;
&lt;/head&gt;
&lt;body&gt;
&lt;div id="index" data-role="page"&gt;
  &lt;div data-role="header"&gt;
    &lt;h1&gt;選択されたファイル数と種類などを調べる&lt;/h1&gt;
  &lt;/div&gt;
  &lt;div data-role="content"&gt;
  &lt;form&gt;
    &lt;input type="file" id="selectFiles" multiple&gt;
    &lt;input type="button" value="調べる" id="checkButton"&gt;
  &lt;/form&gt;
  &lt;br&gt;
  &lt;ul data-role="listview" id="result"&gt;
  &lt;/ul&gt;
  &lt;/div&gt;
