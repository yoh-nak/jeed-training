&lt;!DOCTYPE html&gt;
&lt;html lang="ja"&gt;
&lt;head&gt;
&lt;meta charset="UTF-8"&gt;
&lt;title&gt;&lt;/title&gt;
&lt;link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" /&gt;
&lt;script src="http://code.jquery.com/jquery-1.9.1.min.js"&gt;&lt;/script&gt;
&lt;script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"&gt;&lt;/script&gt;
&lt;script&gt;
$(document).on('pageshow','#index',function(){
  var com, you = undefined;
  var te = ['グー','チョキ','パー'];

  $('#0,#1,#2').on('vclick',function(){
    //コンピュータとあなたの手を格納
    com = Math.floor(Math.random()*3); //乱数0〜2
    you = parseInt($(this).attr('id')); //idの取得

    //コンピューターの手を出力
    $('#com').text(te[com]);

    //結果の出力
    if(com == you){
      $('#result').text('あいこだよ');
    }
    else{
      switch(com){
        case 0:
          if(you == 1){
            $('#result').text('まけちゃった');
          }
          else if(you == 2){
            $('#result').text('かった');
          }
          break;
        case 1:
          if(you == 0){
            $('#result').text('かった');
          }
          else if(you == 2){
            $('#result').text('まけちゃった');
          }
          break;
        case 2:
          if(you == 0){
            $('#result').text('まけちゃった');
          }
          else if(you == 1){
            $('#result').text('かった');
          }
          break;
        default:
          $('#result').text('なぜだろう');
          break;
      }
    }
  });
});
&lt;/script&gt;
&lt;/head&gt;
&lt;body&gt;
  &lt;div data-role="page" id="index"&gt;
    &lt;header data-role="header"&gt;
      &lt;h1&gt;じゃんけんゲーム&lt;/h1&gt;
    &lt;/header&gt;
    &lt;div data-role="content"&gt;
      &lt;a data-role="button" data-inline="true" id="0"&gt;グー&lt;/a&gt;
      &lt;a data-role="button" data-inline="true" id="1"&gt;チョキ&lt;/a&gt;
      &lt;a data-role="button" data-inline="true" id="2"&gt;パー&lt;/a&gt;
      &lt;p id="com"&gt;
      &lt;/p&gt;
      &lt;p id="result"&gt;
      &lt;/p&gt;
