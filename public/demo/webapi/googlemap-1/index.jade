doctype
html(lang='ja')
    head
        meta(charset='UTF-8')
        meta(content='initial-scale=1.0, user-scalable=no', name='viewport')
        script(src='http://maps.googleapis.com/maps/api/js?sensor=false&v=3')
        style
            :stylus
                html, body
                    width 100%
                    height 100%
                    margin 0
        script
            :js
                function initialize(){
                    //地図を表示
                    var latlng = new google.maps.LatLng(34.701912,135.494961);
                    var mapOpts = {
                        zoom: 15,
                        center: latlng,
                        mapTypeId: google.maps.MapTypeId.ROADMAP
                    };
                    var mapDiv = document.getElementById('map');
                    var mapCanvas = new google.maps.Map(mapDiv, mapOpts);
                }
                window.onload = initialize;
    body
        #map(style='width: 100%; height: 100%;')
