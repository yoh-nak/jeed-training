@charset "utf-8";

/*------------------------------------------------------------
    リセット
------------------------------------------------------------*/
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre, a,
abbr, acronym, address, big, cite, code, del, dfn, em,
font, img, ins, kbd, q, s, samp, small, strike, strong,
sub, sup, tt, var, b, u, i, center,
dl, dt, dd, ol, ul, li, fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td, figure
    margin 0
    padding 0
    background transparent
    border 0
    outline 0
    font-size 1em

body, table, input, textarea, select, option
    font-family HiraKakuProN-W3
    font-size 1em

article, aside, canvas, details,
figcaption, figure, footer, header,
hgroup, menu, nav, section, summary
    display block

ol, ul
    list-style none

blockquote, q
    quotes none

:focus
    outline 0

ins
    text-decoration none

del
    text-decoration line-through

/*------------------------------------------------------------
    クリアフィクス
------------------------------------------------------------*/
.cf
    zoom 1
    &:after
        content ""
        display block
        clear both

/*------------------------------------------------------------
    リンク
------------------------------------------------------------*/
a
    color #333
    text-decoration none


/*------------------------------------------------------------
    レイアウト
------------------------------------------------------------*/
body
    line-height 1.5
    -webkit-text-size-adjust none
    color #333
.sprite
    text-indent 100%
    white-space nowrap
    overflow hidden
    background-image url(../images/css_sprite.png)
    background-size 138px 544px
.fluid_img
    width 100%
    height auto

/*------------------------------------------------------------
    ヘッダー
------------------------------------------------------------*/
#header
    border-bottom 3px solid #374c00
    width 100%
    height 44px
    display table
.logo
    display table-cell
    vertical-align middle
    text-align center
    height 44px
    padding-right 32px
    .sprite
        width 138px
        height 16px
        background-position 0 -371px
        display inline-block
.menu_btn
    display table-cell
    vertical-align middle
    width 42px
    padding-left 10px
    .sprite
        width 37px
        height 28px
        background-position 0 -338px

/*------------------------------------------------------------
    コンテナー
------------------------------------------------------------*/
#container
    padding-bottom 16px
    -webkit-box-shadow 0 5px 5px rgba(0,0,0,0.3)
    box-shadow 0 5px 5px rgba(0,0,0,.3)
.main_visual_box
    margin-bottom 1px
    height 200px
    overflow hidden
    .item
        position relative
    .vis
        line-height 0
        width 100%
        position absolute
        left 0
        top 0
        z-index 1
#main_visual
    .catch_area
        position absolute
        left 0
        top 0
        width 192px
        height 200px
        background url(../images/main_visual_catcharea.png) no-repeat left top
        -webkit-background-size 192px 200px
        z-index 2
    .main_catch
        position absolute
        left 16px
        top 30px
        font-size 24px
        font-weight bold
        color #fff
        line-height 1.3
    .text
        position absolute
        left 18px
        top 96px
        font-size 12px
        color #374c00
        width 150px

/*------------------------------------------------------------
    フッター
------------------------------------------------------------*/
#footer
    background-color #8fc700
    padding 15px 0
    text-align center