doctype
html(lang='ja')
    head
        meta(charset='UTF-8')
        meta(content='width=device-width, user-scalable=no', name='viewport')
        link(href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css', rel='stylesheet')
        script(src='http://code.jquery.com/jquery-1.9.1.min.js')
        script(src='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
        title
            | switch文
        script
            :js
                $(document).on('pageshow','#index',function(){
                    $('input[type="radio"]').change(function(){
                        switch($(this).val()){
                            case 'r':
                                $('p').html('止まれ');
                                break;
                            case 'y':
                                $('p').html('注意');
                                break;
                            case 'b':
                                $('p').html('進め');
                                break;
                            default:
                                $('p').html('エラー');
                                break;
                        }
                    });
                });
    body
        #index(data-role='page')
            div(data-role='header')
                h1 switch文
            div(data-role='content')
                form
                    fieldset(data-role='controlgroup', data-type='horizontal')
                        legend 信号：
                        input#signal-red(checked='checked', name='signal', type='radio', value='r')
                        label(for='signal-red') 赤
                        input#signal-yellow(name='signal', type='radio', value='y')
                        label(for='signal-yellow') 黃
                        input#signal-blue(name='signal', type='radio', value='b')
                        label(for='signal-blue') 青
                p
            div(data-position='fixed', data-role='footer')
                h1
                    | フッター