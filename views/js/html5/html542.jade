extends ../../layout

block link
    link(href='../../css/bootstrap.min.css',rel='stylesheet',media='screen')
    link(href='../../css/bootstrap-theme.min.css',rel='stylesheet',media='screen')
    link(href='../../js/dtree/dtree.css', rel='stylesheet', media='screen')
    link(href='../../css/style.css',rel='stylesheet',media='screen')
    link(href='../../js/google-code-prettify/prettify.css',rel='stylesheet',media='screen')

block content
    include navbar
    .container
        .row
            .col-sm-3
                include left
            .col-sm-9
                .panel.panel-primary
                    .panel-heading ローカルストレージから読み出し
                    .panel-body
                        p
                            a.btn.btn-default(href='../demo/html5api/storage4/index1.html', target='_blank')
                                i.glyphicon.glyphicon-play
                                |  デモ
                        pre(class='prettyprint linenums:1')
                            :code
                                doctype html
                                html(lang='ja')
                                    meta(charset='utf-8')
                                    meta(name='viewport', content='width=device-width,initial-scale=1.0,user-scalable=no')
                                    title
                                    link(rel='stylesheet', href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css')
                                    script(src='http://code.jquery.com/jquery-1.9.1.min.js')
                                    script(src='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
                                    script
                                        :js
                                            (function(){
                                                // ローカルストレージから読み出す
                                                $(document).on('pageshow','#index',function(){
                                                    var data = window.localStorage.getItem('textData');
                                                    $('#userComment').val(data);
                                                });
                                            })()
                                    body
                                        #index(data-role='page')
                                            div(data-role='header')
                                                h1 ローカルストレージから読み出し
                                            div(data-role='content')
                                                form
                                                    textarea#userComment(cols='20', rows='5')
                                            div(data-role='footer', data-position='fixed')
                                                h1 フッター
                        p
                            a.btn.btn-default(href='../demo/html5api/storage4/index2.html', target='_blank')
                                i.glyphicon.glyphicon-play
                                |  デモ
                        pre(class='prettyprint linenums:1')
                            :code
                                doctype html
                                html(lang='ja')
                                    meta(charset='utf-8')
                                    meta(name='viewport', content='width=device-width,initial-scale=1.0,user-scalable=no')
                                    title
                                    link(rel='stylesheet', href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css')
                                    script(src='http://code.jquery.com/jquery-1.9.1.min.js')
                                    script(src='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
                                    script
                                        :js
                                            (function(){
                                                // 全てのデータとキーをローカルストレージから読み出す
                                                $(document).on('pageshow','#index',function(){
                                                    for(var i = 0; i < window.localStorage.length; i++){
                                                        var aKey = window.localStorage.key(i);
                                                        var data = window.localStorage.getItem(aKey);
                                                        $('#result').append(aKey + ' = ' + data + '<br>');
                                                    }
                                                });
                                            })()
                                    body
                                        #index(data-role='page')
                                            div(data-role='header')
                                                h1 全てのデータをローカルストレージから読み出す
                                            div(data-role='content')
                                                #result
                                            div(data-role='footer', data-position='fixed')
                                                h1 フッター