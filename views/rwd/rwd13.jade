                            :code
                                @charset "utf-8";

                                // @group Reset
                                *
                                    margin 0
                                    padding 0
                                a
                                    text-decoration none
                                ul,ol
                                    list-style none
                                img
                                    vertical-align middle

                                // @group Fluid-img
                                img
                                     max-width 100%

                                // @group HTML
                                html
                                    font-family verdana, sans-serif
                                    font-size <mark>75%</mark>
                                    line-height 1.5

                                // @group Heading
                                h1
                                    font-size 3em
                                    line-height 1
                                    margin-bottom 0.5em
                                h2
                                    font-size 2.25em
                                    line-height 1.3333
                                    margin-bottom 0.6667em
                                h3
                                    font-size 1.5em
                                    line-height 1
                                    margin-bottom 1em
                                hgroup h2,h4,h5,h6
                                    font-size 1em
                                    line-height 1.5
                                    margin-bottom 1.5em
                                    
                                // @group Header
                                header
                                    text-align center
                                    padding-top 1.5em
                                    background #211f1f
                                    h1
                                        margin-bottom 0.5em
                                    h2
                                        color #fff

                                // @group Nav
                                nav
                                    margin-bottom 1.5em
                                    background-color #7D4934
                                    background -moz-linear-gradient(top, rgba(125,73,52,1) 0%, rgba(43,21,18,1) 88%)
                                    background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(125,73,52,1)), color-stop(88%,rgba(43,21,18,1)))
                                    background -webkit-linear-gradient(top, rgba(125,73,52,1) 0%,rgba(43,21,18,1) 88%)
                                    background -o-linear-gradient(top, rgba(125,73,52,1) 0%,rgba(43,21,18,1) 88%)
                                    background linear-gradient(to bottom, rgba(125,73,52,1) 0%,rgba(43,21,18,1) 88%)
                                    ul
                                        overflow hidden
                                        li
                                            width 25%
                                            float left
                                            a
                                                display block
                                                color #d8c2a4
                                                padding 0.75em 0
                                                &:hover
                                                    color white
                                                    background-color #7d4934

                                // @group Contents
                                #contents
                                    width 90%
                                    margin 0 auto
                                    text-align center
                                    background url(http://griddle.it/960-12-10?color=pink&background=white&text=black)
                                    p
                                        margin-bottom 1.5em
                                        text-align left
                                    img
                                        margin-bottom 1.5em
                                        box-shadow 0 0 0.3125em #2f1f1f

                                // @group Foote
                                footer
                                    padding 1.5em 0
                                    color white
                                    text-align center
                                    background url(../images/footer_bg.png)

                                // 768px
                                @media screen and (min-width : 768px)

                                    html
                                        font-size <mark>87.5%</mark>

                                    #contents
                                        text-align left

                                // 1024px
                                @media screen and (min-width : 1024px)

                                    html
                                        font-size <mark>100%</mark>

                                    // @group Nav
                                    nav ul
                                        width 93.75%
                                        margin 0 auto

                                    // @group Contents 
                                    #contents
                                        overflow hidden
                                        width 93.75%
                                        #main
                                            width 64.5833333%
                                        #sub
                                            width 31.25%
                                    #contents #main,
                                    #contents #sub
                                        float left
                                        margin 0 1.0416667%

                                    // @group Footer
                                    footer
                                        width 91.796875%
                                        margin 0 auto