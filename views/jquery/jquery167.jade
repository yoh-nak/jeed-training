extends ../layout

block link
    include ../link1

block content
    include navbar
    .container
        .row
            .col-sm-3
                include left
            .col-sm-9
                .panel.panel-primary
                    .panel-heading
                        i.glyphicon.glyphicon-book
                        | &nbsp;mousemove()イベント
                    .panel-body
                        p
                            a.btn.btn-default(href='../demo/jquery/exercise170/index1.html',target='_blank')
                                i.glyphicon.glyphicon-play
                                | デモ
                            | 
                            a.btn.btn-default(href='http://api.jquery.com/mousemove/',target='_blank')
                                i.glyphicon.glyphicon-info-sign
                                | &nbsp;参考
                        pre(class='prettyprint linenums:1')
                            :code
                                doctype
                                html(lang='ja-JP')
                                    head
                                        meta(charset='UTF-8')
                                        title
                                    body
                                        p: img(src='img/200x200.png')
                                        h2 screenX、screenY（デスクトップの座標）
                                        p#screen
                                        h2 clientX、clientY（Webブラウザの座標）
                                        p#client
                                        h2 pageX、pageY（Webページの座標）
                                        p#page
                                        h2 offsetX、offsetY（img要素の座標）
                                        p#offset
                                        script(src='http://code.jquery.com/jquery-1.11.0.min.js')
                                        script(src='script.js')
                        pre(class='prettyprint linenums:1')
                            :code
                                $(function() {
                                    $(window).mousemove(function(e) {
                                        $('#screen').html('screenX: ' + e.screenX + ' screenY: ' + e.screenY);
                                    });
                                    $(window).mousemove(function(e) {
                                        $('#client').html('clientX: ' + e.clientX + ' clientY: ' + e.clientY);
                                    });
                                    $(document).mousemove(function(e) {
                                        $('#page').html('pageX: ' + e.pageX + ' pageY: ' + e.pageY);
                                    });
                                    $('img').mousemove(function(e) {
                                        $('#offset').html('offsetX: ' + e.offsetX + ' offsetY: ' + e.offsetY);
                                    });
                                });
                        pre(class='prettyprint linenums:1')
                            :code
                                $ ->
                                    $('html,body').css
                                        width: '100%'
                                        height: '100%'
                                    $('img').css
                                        marginLeft: '-100px'
                                        marginTop: '-100px'
                                        position: 'absolute'
                                    $(document).mousemove (e) ->
                                        $('img').css
                                            'top': e.pageY
                                            'left': e.pageX
                                        return
                                    return