prefix(prop, val)
    -webkit-{prop} val
    {prop} val

html,body
	width 100%
	height 100%

body
	margin 0

.container
	position relative
	min-height 100%

nav.panel
	position absolute
	top 0
	left -250px
	width 300px
	min-height 100%
	background-color aqua
	prefix('transition-property', all)    
	prefix('transition-duration', 500ms)
	prefix('transition-timing-function', ease-in-out)
	&.open
		left 0
	h1
		margin-top 0
		margin-bottom 0
	ul
		margin-top 0
		margin-bottom 0
.content
	min-height 100%
	background-color yellow
	h1
		margin-top 0
		marign-bottom 0
