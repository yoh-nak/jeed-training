    &lt;title&gt;
      switch文
    &lt;/title&gt;
    &lt;script&gt;
      $(document).on('pageshow','#index',function(){
        $('input[type="radio"]').change(function(){
          switch($(this).val()){
            case 'r':
              $('p').html('止まれ');
              break;
            case 'y':
              $('p').html('注意');
              break;
            case 'b':
              $('p').html('進め');
              break;
            default:
              $('p').html('エラー');
              break;
          }
        });
      });
    &lt;/script&gt;
    &lt;style&gt;
      /**/
    &lt;/style&gt;
  &lt;/head&gt;
  &lt;body&gt;
    &lt;div data-role='page' id='index'&gt;
      &lt;div data-role='header'&gt;
        &lt;h1&gt;
          switch文
        &lt;/h1&gt;
      &lt;/div&gt;
      &lt;div data-role='content'&gt;
        &lt;form&gt;
          &lt;fieldset data-role='controlgroup' data-type='horizontal'&gt;
            &lt;legend&gt;
              信号：
            &lt;/legend&gt;
            &lt;input checked='checked' id='signal-red' name='signal' type='radio' value='r'&gt;
            &lt;label for='signal-red'&gt;
              赤
            &lt;/label&gt;
            &lt;input id='signal-yellow' name='signal' type='radio' value='y'&gt;
            &lt;label for='signal-yellow'&gt;
              黃
            &lt;/label&gt;
            &lt;input id='signal-blue' name='signal' type='radio' value='b'&gt;
            &lt;label for='signal-blue'&gt;
              青
            &lt;/label&gt;
          &lt;/fieldset&gt;
        &lt;/form&gt;
        &lt;p&gt;&lt;/p&gt;
