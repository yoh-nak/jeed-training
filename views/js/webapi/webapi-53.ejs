&lt;!DOCTYPE html&gt;
&lt;html lang='ja'&gt;
  &lt;head&gt;
    &lt;meta charset='UTF-8'&gt;
    &lt;meta name='viewport' content='initial-scale=1.0, user-scalable=no'&gt;
    &lt;script src="http://code.jquery.com/jquery-1.10.2.min.js"&gt;&lt;/script&gt;
    &lt;script src="http://maps.google.com/maps/api/js?sensor=true&language=ja"&gt;&lt;/script&gt;
    &lt;script&gt;
      $(function(){
        //地図を表示
        var latlng = new google.maps.LatLng(34.71904,135.499779);
        var mapOpts = {
          zoom: 14, //拡大率
          center: latlng, //中心座標
          mapTypeId: google.maps.MapTypeId.ROADMAP //ロードマップ
        };

        var mapCanvas = new google.maps.Map(document.getElementById('map_canvas'), mapOpts);
      
        //大阪駅にマーカーを生成
        var mOsakaSt = createMarker(
          mapCanvas,
          new google.maps.LatLng(34.7026,135.494936),
          '&lt;strong&gt;大阪駅&lt;/strong&gt;'
        );

        //新大阪駅にマーカーを生成
        var mShinOsakaSt = createMarker(
          mapCanvas,
          new google.maps.LatLng(34.733501,135.500172),
          '&lt;strong&gt;新大阪駅&lt;/strong&gt;'
        );
      
        //クリックして情報ウィンドウが表示されるマーカーを生成
        function createMarker(map, latlng, msg){
          //マーカーを作成
          var marker = new google.maps.Marker();
          marker.setPosition(latlng);
          marker.setMap(map);
      
          //情報ウィンドウを作成
          var infoWnd = new google.maps.InfoWindow();
          infoWnd.setContent(msg);
      
          //マーカーをクリックして情報ウィンドウを表示
          google.maps.event.addListener(marker, 'click', function(){
            infoWnd.open(map, marker);
          });

          return marker;
        }
    });
    &lt;/script&gt;
    &lt;style&gt;
      html, body {
        width: 100%;
        height: 100%;
        margin: 0;
      }
      #map_canvas{
        width: 100%;
        height: 100%;
      }
    &lt;/style&gt;
  &lt;/head&gt;
  &lt;body&gt;
