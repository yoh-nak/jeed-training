extends ../../layout

block link
    link(href='../../css/bootstrap.min.css',rel='stylesheet',media='screen')
    link(href='../../css/bootstrap-theme.min.css',rel='stylesheet',media='screen')
    link(href='../../js/dtree/dtree.css', rel='stylesheet', media='screen')
    link(href='../../css/style.css',rel='stylesheet',media='screen')
    link(href='../../js/google-code-prettify/prettify.css',rel='stylesheet',media='screen')

block content
    include navbar
    .container
        .row
            .col-sm-3
                include googlemap
            .col-sm-9
                .panel.panel-primary
                    .panel-heading jQueryのプラグインで表示
                    .panel-body
                        p
                            a.btn.btn-default(href='../demo/webapi/googlemap-19/index.html', target='_blank')
                                i.glyphicon.glyphicon-play
                                |  デモ
                            |  
                            a.btn.btn-default(href='http://blog.bumberboom.net/archives/monthly/2010_09/google-maps-api-v3-jquery.php', target='_blank')
                                i.glyphicon.glyphicon-info-sign
                                |  参考：Google Maps API V3 jQuery プラグイン
                        pre(class='prettyprint linenums:1')
                            :code
                                doctype html
                                html(lang='ja')
                                    head
                                        meta(charset='utf-8')
                                        meta(name='viewport', content='initial-scale=1.0,user-scalable=no')
                                        title
                                        script(src='http://code.jquery.com/jquery-1.11.0.min.js')
                                        script(src='http://maps.google.com/maps/api/js?sensor=true&language=ja')
                                        script(src='jquery.gmap3.js')
                                        style
                                            :stylus
                                                html,body
                                                    width 100%
                                                    height 100%
                                                    margin 0
                                                #map
                                                    width 100%
                                                    height 100%
                                        script
                                            :js
                                                (function(){
                                                    $(function(){
                                                        // Googleマップの埋め込み
                                                        var gmap = $('#map').gmap3({
                                                            //初期表示位置の指定
                                                            latitude:     34.701912, // 緯度
                                                            longitude: 135.494961, // 経度
                                                            zoom: 15,                            // ズームレベル
                                                            //各コントロールの表示／非表示
                                                            navigationControl: true,
                                                            mapTypeControl: false,
                                                            scaleControl: true,
                                                            //マーカーの設置
                                                            markers: [
                                                                {
                                                                    address: '〒530-0001 大阪府大阪市北区梅田３丁目',
                                                                    title: 'JR大阪駅',
                                                                    content: '<div class="popup"><h4>JR大阪駅</h4><p>〒530-0001<br>大阪府大阪市北区梅田３丁目</p></div>',
                                                                    icon: 'kumamon.gif',
                                                                    openInfo: true
                                                                },
                                                                {
                                                                    //2つ目のマーカー
                                                                },
                                                                {
                                                                    //3つ目のマーカー
                                                                }
                                                            ]
                                                        }).data('gmap');
                                                    });
                                                })()
                                    body
                                        #map