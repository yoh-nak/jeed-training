extends ../layout

block link
    include ../link1

block content
    include navbar
    .container
        .row
            .col-sm-3
                include left
            .col-sm-9
                .panel.panel-primary
                    .panel-heading
                        i.glyphicon.glyphicon-bookmark
                        | 課題
                    .panel-body
                        p 繰り返し構文を使って、くまモン20匹をランダムに表示してみましょう。
                        p
                            a.btn.btn-default(href='../demo/js/excercise24/index.html', target='_blank')
                                i.glyphicon.glyphicon-play
                                | デモ
                            |  
                            button.btn.btn-danger(type='button', data-toggle='collapse', data-target='#demo')
                                i.glyphicon.glyphicon-question-sign
                                | 解答例
                        #demo.collapse.out
                            pre(class='prettyprint linenums:1')
                                :code
                                    doctype
                                    html(lang='ja')
                                        head
                                            meta(charset='UTF-8')
                                            meta(content='width=device-width, user-scalable=no', name='viewport')
                                            link(href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css', rel='stylesheet')
                                            script(src='http://code.jquery.com/jquery-1.9.1.min.js')
                                            script(src='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
                                            title ランダムイメージ
                                            script
                                                :js
                                                    $(document).on('pageshow','#index',function(){
                                                        for(var i = 0; i < 20; i++){
                                                            $('[data-role="content"]').append('<img src="kumamon.gif" alt="">');
                                                            $('img:nth(' + i + ')').css({
                                                                top: Math.floor(Math.random() * (480-64)),
                                                                left: Math.floor(Math.random() * (innerWidth-64)),
                                                            });
                                                        }
                                                    });
                                            style
                                                :stylus
                                                    [data-role="content"]
                                                        position relative
                                                        height 480px
                                                    [data-role="content"] img
                                                        width 64px
                                                        height 64px
                                                        position absolute
                                        body
                                            #index(data-role='page')
                                                div(data-role='header')
                                                    h1 ランダムイメージ
                                                div(data-role='content')
                                                div(data-position='fixed', data-role='footer')
                                                    h1 フッター