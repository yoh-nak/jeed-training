block content
    include navbar
    .container
        .row
            .col-sm-3
                include left
            .col-sm-9
                .panel.panel-primary
                    .panel-heading
                        i.glyphicon.glyphicon-book
                        | 条件分岐
                    .panel-body
                        h4 条件分岐
                        pre
                            :code
                                if(条件式){
                                    条件を満たしたときに実行する処理
                                }
                        h4 比較（関係）演算子
                        table.table
                            tr
                                th 演算子
                                th 名前
                                th 式名
                                th 例と結果
                            tr
                                td='<'
                                td 小なり演算子
                                td 関係式
                                td='1 < 2; //=>true'
                            tr
                                td='>'
                                td 大なり演算子
                                td 同上
                                td='1 > 2; //=>false'
                            tr
                                td='<='
                                td 小なりイコール演算子
                                td 同上
                                td='1 >= 1; //=> true'
                            tr
                                td='>='
                                td 大なりイコール演算子
                                td 同上
                                td='1 <= 1 //=> true'
                            tr
                                td='=='
                                td 等価演算子
                                td 等価式
                                td='1 == 1; //=> true'
                            tr
                                td='==='
                                td 厳密等価演算子
                                td 同上
                                td='1 === "1"; //=> false'
                            tr
                                td='!='
                                td 不等価演算子
                                td 同上
                                td='1 != 2; //=>true'
                            tr
                                td='!=='
                                td 厳密不等価演算子
                                td 同上
                                td='1 !== "1"; //=>true'
