include ../head.jade
	body
		include navbar.jade
		div.container
			div.row
				div.col-sm-3
					include left.jade
				div.col-sm-9
					div.panel.panel-primary
						div.panel-heading
							i.glyphicon.glyphicon-book
							| 列のグループ
						div.panel-body
							table.browser-support
								tr
									td
										img(src='images/ic-apple.png')
									td
										img(src='images/ic-android.png')
									td
										img(src='images/ic-firefox.png')
									td
										img(src='images/ic-safari.png')
									td
										img(src='images/ic-chrome.png')
									td
										img(src='images/ic-opera.png')
									td
										img(src='images/ic-ie.png')
							.alert.alert-info 列のグループ
							pre
								| &lt;colgroup&gt;...&lt;/colgroup&gt;
							table.table
								tr
									td カテゴリー
									td なし
								tr
									td 記述可能な場所
									td
										| &lt;table&gt;内の子要素として&lt;caption&gt;の後、&lt;thead&gt;、&lt;tbody&gt;、&lt;tfoot&gt;、&lt;tr&gt;の前に記述可能
								tr
									td コンテンツモデル
									td
										| ・span属性を持つ場合：空
										| ・span属性を持たない場合：
										| 	ゼロまたは1つ以上の&lt;col&gt;
								tr
									td 構成するボックス
									td table-column-group
								tr
									td 属性
									td span／グローバル 
								tr
									td 標準的なスタイル
									td
										pre
											| colgroup {
											| 	display: table-column-group;
											| 	unicode-bidi: isolate;
											| }
							.alert.alert-info グループに属する列
							pre
								| &lt;col&gt;
							table.table
								tr
									td カテゴリー
									td なし
								tr
									td 記述可能な場所
									td
										| span属性を持たない&lt;colgroup&gt;内の子要素として記述可能
								tr
									td コンテンツモデル
									td 空
								tr
									td 構成するボックス
									td table-column
								tr
									td 属性
									td span／グローバル 
								tr
									td 標準的なスタイル
									td
										pre
											| col {
											| 	display: table-column;
											| 	unicode-bidi: isolate;
											| }
		div#footer=title
		script(src='http://code.jquery.com/jquery.js')
		script(src='js/google-code-prettify/prettify.js')
		script.
			prettyPrint();
		script(src='js/bootstrap.min.js')
		script(src='coffee/list-counter.js')